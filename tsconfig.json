{
  "compilerOptions": {
  "esModuleInterop": false,
  "paths": {
    "*":[
      "types/*"
    ]
  },
  "resolveJsonModule": true,
  "module": "commonjs",
  "moduleResolution": "node",
  "noImplicitAny": false,
  "strictNullChecks": false,
  "lib": [
    "es5",
    "dom"
  ],
  "pretty": true,
  "sourceMap": true,
  "target": "es6",
  "outDir":"dist",
  "baseUrl": "src",
  "strict": false,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  },
  "include": [
    "src/**/*"

  ],
  "exclude": [
    "node_modules"
  ]
}
